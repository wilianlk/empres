{% extends "@App/Layouts/layout.html.twig" %}

{% block content %}
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <strong>Crear Beneficio</strong>
                <hr>
                {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}

                <div class="form-group">
                    <label class="col-md-4 control-label">Nombre Beneficio</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-tags"></i></span>
                            {{ form_widget(form.nombre) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Pais</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-flag"></i></span>
                            {{ form_widget(form.pais) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-warning">Enviar<span
                                    class="glyphicon glyphicon-send"></span></button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
