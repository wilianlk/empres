{% extends "@App/Layouts/layout.html.twig" %}

{% block content %}

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <div class="container">

        <h1>Lista de Beneficios</h1>

        <a href="{{ path('timeclock_benefits_new') }}" class="btn btn-primary" role="button">Crear Nuevo Beneficio</a>
        <br>
        <br>

        <div class="count">
        <span class="label label-primary">
            Entradas en total: {{ pagination.getTotalItemCount }}
        </span>
        </div>

        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'ID Beneficio', 'idBeneficio') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Nombre', 'nombre') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Pais', 'pais') }}</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for benefit in pagination %}
                <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>
                        <a href="{{ path('timeclock_benefits_show', { 'idBeneficio': benefit.idBeneficio }) }}">{{ benefit.idBeneficio }}
                        </a>
                    </td>
                    <td>{{ benefit.nombre }}</td>
                    <td>{{ benefit.pais }}</td>
                    <td>
                        <a href="{{ path('timeclock_benefits_show', { 'idBeneficio': benefit.idBeneficio }) }}"
                           class="btn btn-primary">show</a>
                        <a href="{{ path('timeclock_benefits_edit', { 'idBeneficio': benefit.idBeneficio }) }}"
                           class="btn btn-warning">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
