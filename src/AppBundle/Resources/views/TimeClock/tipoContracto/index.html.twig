{% extends "@App/Layouts/layout.html.twig" %}

{% block content %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <div class="container">
        <h1>Tipo de Contractos</h1>

        <a href="{{ path('timeclock_contracttypes_new') }}" class="btn btn-primary" role="button">Crear Tipo de
            Contracto</a>

        <div class="row"></div>
        <br>

        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'ID Beneficio', 'idTypeContract') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Nombre De Contracto', 'contractName') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Actions', '') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for contractType in pagination %}
                <tr>
                    <td>
                        <a href="{{ path('timeclock_contracttypes_show', { 'idTypeContract': contractType.idTypeContract }) }}">{{ contractType.idTypeContract }}</a>
                    </td>
                    <td>{{ contractType.contractName }}</td>
                    <td>
                        <a href="{{ path('timeclock_contracttypes_show', { 'idTypeContract': contractType.idTypeContract }) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('timeclock_contracttypes_edit', { 'idTypeContract': contractType.idTypeContract }) }}" class="btn btn-warning">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
